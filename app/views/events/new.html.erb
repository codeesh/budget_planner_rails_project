<h1>Create New Event</h1>


<!-Display Errors for event create if error ->
<% if @event.errors.any? %>
  <div id="error_explanation">
    <h2>There were some errors:</h2>
    <ul>
      <% @event.errors.full_messages.each do |message| %>
      <% if  message != "Password digest can't be blank"%>
        <div class="alert alert-danger">
          <li><%= message %></li> 
        </div>
      <%end%>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_for @event, controller: 'events', action: 'create'   do |f| %>
  <%= f.label :name%>
  <%= f.text_field :name%>

  <%= f.label :budget%>
  <%= f.number_field  :budget, class: :text_field, step: :any%>

  <%= f.submit "Create Event" %>
<%end%>

<% if @event.errors.any? %>
<ul>
  <% @event.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

