Welcome <%=  @user.name %>


  <%= link_to "Create New Event", new_user_event_url(@user) %>




<table>
  <tr>
    <td>Event name</td>
  </tr>
  <% @events.each do |event| %>
  <tr>
    <td><%= link_to event.name, user_event_path(@user,event)%></td> 
    <td><%= event.budget%></td> 
    <td><%= link_to "Delete" , user_event_path(@user, event), :method => :delete%></td>
  </tr>
   <%end%> 
</table>

<h3><%= link_to "Shopping List", users_shoppinglist_path %></h3>

<br>
<% if @ended_events %>
  <h3>Ended Events</h3>
  <ul>
  <% @ended_events.each do |event|%>
    <li><h4><%= link_to event.name, user_event_path(@user,event)%></h4></li>
  <%end%>
  </ul>
<% end %>